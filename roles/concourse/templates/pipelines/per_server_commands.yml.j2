resources:
- name: commands
  type: git
  source:
    uri: {{ commands_data_repo }}
    branch: {{ inventory_hostname }}

jobs:
  - name: commands
    plan:
      - get: commands
        trigger: true
      - task: run-commands
        privileged: true
        config:
          platform: linux
          image_resource:
            type: registry-image
            source:
              repository: registry.ryuugu.dev/prov
              tag: latest
          inputs:
            - name: commands
          params:
            VAULT_TOKEN: ((root_token.key))
            VAULT_ADDR: "{{ vault_url }}"
          run:
            path: /bin/bash
            user: keiichi
            dir: /homelab
            args:
              - -lc
              - |
                  shopt -s nullglob
                  commands_file=(/tmp/build/*/commands/commands)
                  ssh {{ inventory_hostname }} 'bash -s' < "${commands_file[0]}"
