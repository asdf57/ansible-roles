resources:
- name: commands
  type: git
  source:
    uri: {{ commands_data_repo }}
    branch: {{ inventory_hostname }}

jobs:
  - name: commands
    plan:
      - get: commands
        trigger: true
      - task: run-commands
        privileged: true
        config:
          platform: linux
          image_resource:
            type: registry-image
            source:
              repository: registry.ryuugu.dev/prov
              tag: latest
          inputs:
            - name: commands
          params:
{% for key, value in hostvars['localhost']['ansible_env'].items() %}
            {{ key }}: {{ value | to_json }}
{% endfor %}
          run:
            path: /bin/bash
            user: keiichi
            dir: /homelab
            args:
              - -lc
              - |
                  shopt -s nullglob
                  commands_file=(/tmp/build/*/commands/commands)
                  user=$(yq e '.user' "${commands_file[0]}")
                  yq e '.commands' "${commands_file[0]}" | ssh "${user}@{{ inventory_hostname }}" 'bash -s'
